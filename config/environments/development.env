# Paydash Development Environment Configuration - Phase 5

# Application Settings
NODE_ENV=development
PORT=3001
LOG_LEVEL=debug

# Database Connections
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=paydash-redis-2024
CASSANDRA_HOST=localhost:9042
CASSANDRA_KEYSPACE=paydash
CASSANDRA_USERNAME=cassandra
CASSANDRA_PASSWORD=cassandra

# Kafka Configuration
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=paydash-dev
KAFKA_GROUP_ID=paydash-consumers-dev

# Event Generator Settings
EVENT_GENERATION_INTERVAL_MIN=15
EVENT_GENERATION_INTERVAL_MAX=45
BATCH_SIZE_MIN=1
BATCH_SIZE_MAX=10

# Event Processor Settings
FLINK_PARALLELISM=1
FLINK_CHECKPOINTING_INTERVAL=30000
FLINK_STATE_BACKEND=filesystem

# Monitoring and Health
HEALTH_CHECK_INTERVAL=30
METRICS_COLLECTION_INTERVAL=60
ENABLE_METRICS=true
ENABLE_HEALTH_CHECKS=true

# Security
JWT_SECRET=dev-secret-key-not-for-production
API_RATE_LIMIT=100

# Cache Settings
REDIS_TTL_SECONDS=3600
CASSANDRA_CONSISTENCY_LEVEL=ONE