# Paydash Production Environment Configuration - Phase 5

# Application Settings
NODE_ENV=production
PORT=3001
LOG_LEVEL=info

# Database Connections
REDIS_URL=redis://paydash-redis:6379
REDIS_PASSWORD=paydash-redis-production-2024
CASSANDRA_HOST=paydash-cassandra:9042
CASSANDRA_KEYSPACE=paydash
CASSANDRA_USERNAME=paydash_user
CASSANDRA_PASSWORD=paydash-cassandra-production-2024

# Kafka Configuration
KAFKA_BROKERS=paydash-kafka:9092
KAFKA_CLIENT_ID=paydash-prod
KAFKA_GROUP_ID=paydash-consumers-prod

# Event Generator Settings
EVENT_GENERATION_INTERVAL_MIN=10
EVENT_GENERATION_INTERVAL_MAX=30
BATCH_SIZE_MIN=5
BATCH_SIZE_MAX=25

# Event Processor Settings
FLINK_PARALLELISM=4
FLINK_CHECKPOINTING_INTERVAL=10000
FLINK_STATE_BACKEND=rocksdb

# Monitoring and Health
HEALTH_CHECK_INTERVAL=15
METRICS_COLLECTION_INTERVAL=30
ENABLE_METRICS=true
ENABLE_HEALTH_CHECKS=true

# Security
JWT_SECRET=production-secret-key-change-this
API_RATE_LIMIT=1000

# Cache Settings
REDIS_TTL_SECONDS=7200
CASSANDRA_CONSISTENCY_LEVEL=QUORUM

# Performance
MAX_HEAP_SIZE=2g
GC_SETTINGS=-XX:+UseG1GC -XX:MaxGCPauseMillis=200