{
  "name": "paydash",
  "version": "1.0.0",
  "description": "Paydash - Payment Processing Dashboard",
  "main": "dist/index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:client\" \"npm run dev:server\"",
    "dev:server": "nodemon src/index.ts",
    "dev:client": "cd client && npm run dev",
    "build": "npm run build:client && npm run build:server",
    "build:client": "cd client && npm run build",
    "build:server": "tsc",
    "start": "node dist/index.js",
    "test": "npm run test:server && npm run test:client",
    "test:server": "jest",
    "test:client": "cd client && npm test",
    "test:coverage": "npm run test:coverage:server && npm run test:coverage:client",
    "test:coverage:server": "jest --coverage",
    "test:coverage:client": "cd client && npm run test:coverage",
    "install:all": "npm install && cd client && npm install",
    "clean": "rm -rf dist client/dist"
  },
  "dependencies": {
    "@types/winston": "^2.4.4",
    "cassandra-driver": "^4.8.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "node-cron": "^3.0.3",
    "prom-client": "^15.1.3",
    "redis": "^4.6.12",
    "uuid": "^9.0.1",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.10.5",
    "@types/node-cron": "^3.0.11",
    "@types/supertest": "^2.0.16",
    "@types/uuid": "^9.0.7",
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
